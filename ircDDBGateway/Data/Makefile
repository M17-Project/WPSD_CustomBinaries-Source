	 -m 0644 TIME_pt_PT.ambe  $(DESTDIR)$(DATADIR)
	 -m 0644 TIME_pt_PT.indx  $(DESTDIR)$(DATADIR)
	 -m 0644 TIME_se_SE.ambe  $(DESTDIR)$(DATADIR)
	 -m 0644 TIME_se_SE.indx  $(DESTDIR)$(DATADIR)
	 -m 0644 de_DE.ambe $(DESTDIR)$(DATADIR)
	 -m 0644 de_DE.indx $(DESTDIR)$(DATADIR)
	 -m 0644 dk_DK.ambe $(DESTDIR)$(DATADIR)
