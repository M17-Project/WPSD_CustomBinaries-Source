	 -m 0644 en_GB.ambe $(DESTDIR)$(DATADIR)
	 -m 0644 en_GB.indx $(DESTDIR)$(DATADIR)
	 -m 0644 en_US.ambe $(DESTDIR)$(DATADIR)
	 -m 0644 en_US.indx $(DESTDIR)$(DATADIR)
	 -m 0644 es_ES.ambe $(DESTDIR)$(DATADIR)
